@model IEnumerable<ReReView.DAL.Menu>

@{
    ViewBag.Title = "Index";
}

<h2>Menus</h2>


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Restuarant.restaurantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.menuName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.menuType)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Restuarant.restaurantName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.menuName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.menuType)
        </td>

    </tr>
}

</table>
